" Colours
syntax enable
colorscheme desert

" Spacing
set tabstop=4
set softtabstop=4
set expandtab
set smarttab
set autoindent

" UI
set number
set showcmd
set showmatch
set ruler
set laststatus=2
set mouse=a
set noea

" Searching
set incsearch
set hlsearch
set smartcase

" Keymaps
nnoremap <C-N> :bn<CR>

